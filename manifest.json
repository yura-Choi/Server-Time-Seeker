{
    "manifest_version":2,
    "name": "Server Time Seeker",
    "description": "For getting current server time",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },

    "browser_action": {
        "default_title": "Server Time Seeker",
        "default_popup": "popup.html",
        "default_icon": "favicon.png"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}